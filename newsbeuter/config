# All of the configs are explained in
# http://newsbeuter.org/doc/newsbeuter.html

# reloading settings
auto-reload yes
refresh-on-startup yes
reload-time 120
reload-threads 2
reload-only-visible-feeds no
download-retries 5

# display
article-sort-order date-desc
datetime-format "%d-%m-%y"
feedlist-format "%4i  %3U/%-3c  %S  %-100t %l"
articlelist-format "%4i  %D  %f  %?T?|%-20T|  ?%t"
notify-format "%d new articles (%n unread articles, %f unread feeds)"
highlight article "(^Feed:.*|^Title:.*|^Author:.*|^Link:.*|^Date:.*)" color75 default

# external
browser firefox

# filters
ignore-article "*" "title =~ \"Sponsor\""
ignore-article "*" "title =~ \"Advertisement\""

# vim key bindings
unbind-key ^B
bind-key ^B pageup
unbind-key ^F
bind-key ^F pagedown
bind-key k up
bind-key j down
bind-key h quit
unbind-key l
bind-key l open
bind-key L toggle-show-read-feeds
